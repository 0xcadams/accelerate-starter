{
  "version": 2,
  "name": "accelerate-starter",
  "alias": ["accelerate-starter.com"],
  "env": {
    "MONGODB_URL": "@mongodb-url-prod",
    "AUTH_SECRET": "@authentication-secret-prod",
    "JWT_AUDIENCE": "https://accelerate-starter.com"
  },
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "packages/api/src/app.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "packages/api/src/app.ts"
    },
    {
      "src": "^/service-worker.js$",
      "dest": "/packages/web/_next/static/service-worker.js",
      "headers": {
        "cache-control": "public, max-age=43200, immutable",
        "service-worker-allowed": "/"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/packages/web/$1",
      "headers": {
        "cache-control": "public, max-age=43200, immutable"
      }
    }
  ],
  "builds": [
    {
      "src": "packages/api/src/app.ts",
      "use": "@now/node"
    },
    { "src": "packages/web/next.config.js", "use": "@now/next" }
  ]
}
