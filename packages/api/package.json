{
  "name": "@accelerate-starter/api",
  "version": "0.2.0",
  "description": "FeathersJS-based API for accelerate-starter.",
  "private": true,
  "main": "src",
  "directories": {
    "lib": "src"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc -p .",
    "lint": "tslint -p . -c ../../tslint.json 'src/**/*.ts'",
    "mocha": "mocha src/**/*.test.ts",
    "now-build": "lerna run build",
    "serve": "node lib/index.js",
    "start": "nodemon --exec \"ts-node src/index.ts\"",
    "test": "yarn lint && yarn mocha",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@accelerate-starter/core": "^0.2.0",
    "@feathersjs/authentication": "^2.1.13",
    "@feathersjs/authentication-jwt": "^2.0.7",
    "@feathersjs/authentication-local": "^1.2.7",
    "@feathersjs/errors": "^3.3.4",
    "@feathersjs/express": "^1.2.7",
    "@feathersjs/feathers": "^3.2.3",
    "@feathersjs/socketio": "^3.2.7",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "feathers-mongoose": "^7.0.0",
    "gravatar": "^1.8.0",
    "helmet": "^3.15.0",
    "mongoose": "^5.3.12",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/feathersjs__authentication": "^2.1.3",
    "@types/feathersjs__authentication-jwt": "^1.0.5",
    "@types/feathersjs__authentication-local": "^1.0.3",
    "@types/feathersjs__configuration": "^1.0.1",
    "@types/feathersjs__errors": "^3.2.1",
    "@types/feathersjs__express": "^1.1.4",
    "@types/feathersjs__feathers": "^3.1.1",
    "@types/feathersjs__socketio": "^3.0.3",
    "@types/gravatar": "^1.8.0",
    "@types/helmet": "^0.0.43",
    "@types/mongoose": "^5.5.24",
    "@types/node": "^11.11.7",
    "@types/passport-facebook": "^2.1.8",
    "@types/passport-google-oauth2": "^0.1.2",
    "@types/winston": "^2.4.4",
    "feathers-memory": "^3.0.2",
    "source-map-support": "^0.5.11"
  }
}
