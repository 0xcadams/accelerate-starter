{
  "name": "@accelerate-starter/web",
  "version": "0.0.1",
  "description": "NextJS-based web application for accelerate-starter.",
  "main": "app/server.js",
  "scripts": {
    "analyze": "BUNDLE_ANALYZE=both npm run build",
    "build": "NODE_ENV=production next build",
    "export": "NODE_ENV=production next export",
    "format": "prettier --write --single-quote --trailing-comma es5",
    "lint": "tslint -c ../../tslint.json 'src/**/*.ts?(x)' 'pages/**/*.ts?(x)'",
    "mocha": "ts-mocha -p ./tsconfig.json src/**/*.test.tsx",
    "now-build": "lerna run build",
    "serve": "NODE_ENV=production node ./app/server.js",
    "start": "PROXY_MODE=local nodemon --watch app --watch app/server.js",
    "test": "yarn lint && yarn mocha",
    "test:integration": "cypress run",
    "test:integration:open": "cypress open"
  },
  "dependencies": {
    "@accelerate-starter/core": "^0.0.1",
    "@feathersjs/authentication-client": "^1.0.11",
    "@feathersjs/feathers": "^3.3.1",
    "@feathersjs/rest-client": "^1.4.7",
    "@feathersjs/socketio-client": "^1.2.1",
    "@types/uuid": "^3.4.4",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "email-validator": "^2.0.4",
    "http-proxy-middleware": "^0.19.1",
    "isomorphic-unfetch": "^3.0.0",
    "mobile-detect": "^1.4.3",
    "next": "^8.0.1",
    "next-compose-plugins": "^2.1.1",
    "next-redux-wrapper": "^2.1.0",
    "next-routes": "^1.4.2",
    "next-runtime-dotenv": "^1.0.1",
    "node-sass": "^4.11.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "redux-promise-middleware": "^6.1.0",
    "redux-saga": "^1.0.2",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.86.0",
    "socket.io-client": "^2.2.0",
    "typesafe-actions": "^3.1.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/enzyme": "^3.9.1",
    "@types/expect": "^1.20.4",
    "@types/feathersjs__authentication-client": "^1.0.4",
    "@types/feathersjs__feathers": "^3.1.1",
    "@types/feathersjs__rest-client": "^1.3.1",
    "@types/feathersjs__socketio-client": "^1.0.1",
    "@types/lorem-ipsum": "^1.0.2",
    "@types/mocha": "^5.2.6",
    "@types/next": "^7.0.5",
    "@types/next-redux-wrapper": "^2.0.2",
    "@types/react": "^16.8.8",
    "@types/react-redux": "^6.0.11",
    "@types/semantic-ui": "^2.2.6",
    "autoprefixer": "^9.4.3",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.2.0",
    "cypress": "3.1.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "file-loader": "^3.0.1",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.8.3",
    "redux-devtools-extension": "^2.13.7",
    "ts-mocha": "^6.0.0",
    "typescript": "^3.3.3",
    "url-loader": "^1.1.2"
  }
}
