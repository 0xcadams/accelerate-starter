{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "outDir": "out",
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@Actions": ["./src/Actions"],
      "@Actions/*": ["./src/Actions/*"],
      "@Api": ["./src/Api"],
      "@Api/*": ["./src/Api/*"],
      "@Components/*": ["./src/Components/*"],
      "@Components": ["./src/Components"],
      "@Config": ["./src/Config"],
      "@Reducers": ["./src/Reducers"],
      "@Reducers/*": ["./src/Reducers/*"],
      "@Redux": ["./src/Redux"],
      "@Redux/*": ["./src/Redux/*"],
      "@Sagas": ["./src/Sagas"],
      "@Sagas/*": ["./src/Sagas/*"]
    }
  },
  "compileOnSave": true,
  "references": [
    { "path": "../lib" }
  ]
}
