{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "outDir": "lib",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@actions": ["./src/actions"],
      "@actions/*": ["./src/actions/*"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@api": ["./src/api"],
      "@api/*": ["./src/api/*"],
      "@components/*": ["./src/components/*"],
      "@components": ["./src/components"],
      "@reducers": ["./src/reducers"],
      "@reducers/*": ["./src/reducers/*"],
      "@redux": ["./src/redux"],
      "@redux/*": ["./src/redux/*"],
      "@sagas": ["./src/sagas"],
      "@sagas/*": ["./src/sagas/*"]
    }
  },
  "includes": ["./typings/**/*.d.ts"],
  "references": [{ "path": "../core" }]
}
