{
  "name": "accelerate-starter",
  "description": "An opinionated universal web app + API starter kit to facilitate rapid and scalable development using NextJS, FeathersJS, and MongoDB.",
  "private": true,
  "homepage": "https://accelerate-starter.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/chase-adams/accelerate-starter.git"
  },
  "contributors": [
    "Chase Adams (https://cadams.io)"
  ],
  "keywords": [
    "commitizen",
    "cypress",
    "feathersjs",
    "lerna",
    "now",
    "redux-saga",
    "redux",
    "semantic-ui-react",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/chase-adams/accelerate-starter/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "lerna run build --stream",
    "commit": "git-cz",
    "fix": "lerna run lint --stream -- --fix",
    "lh": "lighthousebot",
    "lint": "lerna run lint --stream",
    "postinstall": "lerna run build --scope @accelerate-starter/core",
    "release": "lerna version --conventional-commits --github-release --yes",
    "start": "lerna run start --stream",
    "test:integration": "lerna run test:integration --stream",
    "test:integration:open": "lerna run test:integration:open --stream",
    "test": "lerna run test --stream"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@feathersjs/feathers": "^3.3.1",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "cz-conventional-changelog": "2.1.0",
    "husky": "^1.3.1",
    "lerna": "3.16.3",
    "lighthousebot": "https://github.com/GoogleChromeLabs/lighthousebot",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "now": "^15.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react-hooks": "^2.0.0",
    "typescript": "^3.3.4000"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn test"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true
  }
}
