{
  "name": "accelerate-starter",
  "description": "A starter to facilitate rapid and scalable development using NextJS, Feathers, and Typescript.",
  "private": true,
  "homepage": "https://accelerate-starter.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/chase-adams/accelerate-starter.git"
  },
  "contributors": [
    "Chase Adams (https://cadams.io)"
  ],
  "keywords": [
    "now",
    "typescript",
    "node",
    "feathersjs",
    "cypress",
    "now-cli",
    "lerna",
    "commitizen",
    "redux",
    "redux-saga",
    "semantic-ui-react"
  ],
  "bugs": {
    "url": "https://github.com/chase-adams/accelerate-starter/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "lerna run build --stream",
    "commit": "git-cz",
    "fix": "lerna run lint --stream -- --fix",
    "lint": "lerna run lint --stream",
    "start": "lerna run start --stream",
    "test": "lerna run test --stream",
    "test:integration": "lerna run test:integration --stream",
    "test:integration:open": "lerna run test:integration:open --stream"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "cz-conventional-changelog": "2.1.0",
    "husky": "^1.3.1",
    "lerna": "3.13.1",
    "now": "^14.2.2",
    "tslint": "^5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-react-hooks": "^2.0.0",
    "typescript": "^3.3.4000"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
