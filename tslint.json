{
  "extends": "tslint-config-airbnb",
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "trailing-comma": [true, { "multiline": "never", "singleline": "never" }],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case",
      "allow-snake-case",
      "ban-keywords"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
